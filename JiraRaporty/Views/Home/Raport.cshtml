@{
    ViewData["Title"] = "Timesheet Raport";
    var projects = ViewData["Projects"] as List<ProjectClass1>;
}

<div class="container mt-5 pt-3">
    <div class="row justify-content-center">
        <div class="col-lg-4 col-md-6 col-sm-7">
            <form asp-controller="Home" asp-action="ExportToExcel" method="post">
                <div class="mb-3">
                    <label for="multiSelect" class="form-label">Projekty:</label>
                    <select id="multiSelect" name="projectList" class="form-select" multiple="multiple" required>
                        @foreach (var project in projects)
                        {
                            <option value="@project.key">@project.name (@project.key)</option>
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="Date">Data:</label>
                    <div class="row g-2">
                        <div class="col-6">
                            <label class="form-label" for="fromDate">Od</label>
                            <input type="date" id="fromDate" name="fromDate" class="form-control" required />
                        </div>
                        <div class="col-6">
                            <label class="form-label" for="toDate">Do</label>
                            <input type="date" id="toDate" name="toDate" class="form-control" required />
                        </div>
                    </div>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="inLocal" name="inLocal" value="True" />
                    <label for="inLocal" class="form-check-label">
                        Czy wyodrębnić pracę w lokalu
                    </label>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary">Download raport</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts
{
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>

